<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="creations.rimov.com.chipit">

    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>
    <uses-feature android:name="android.hardware.camera2"
                  android:required="true"/>

    <!--Permission to store to app's private storage (only necessary for API <18)-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
                     android:maxSdkVersion="18"/>

    <application
            android:name=".database.DatabaseApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!--Reference: https://developer.android.com/reference/android/support/v4/content/FileProvider.html-->
        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="com.rimov.creations.chipit.imageprovider"
                android:exported="false"
                android:grantUriPermissions="true">

            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_paths"/>

        </provider>

        <activity android:name="creations.rimov.com.chipit.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="creations.rimov.com.chipit.activities.WebActivity"/>
        <activity android:name=".activities.ChipActivity"/>
    </application>

</manifest>