<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/standard_margin_small"
      android:layout_marginEnd="@dimen/standard_margin_small"
      android:layout_marginTop="@dimen/standard_margin_small"
      android:elevation="@dimen/elevation_small">

    <ImageView
          android:id="@+id/cardImage"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@id/cardGuide"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:adjustViewBounds="true"/>

    <TextView
          android:id="@+id/cardDesc"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:gravity="center"
          android:elevation="@dimen/elevation_small"
          app:layout_constraintStart_toStartOf="@id/cardImage"
          app:layout_constraintEnd_toEndOf="@id/cardImage"
          app:layout_constraintTop_toTopOf="@id/cardImage"
          app:layout_constraintBottom_toBottomOf="@id/cardImage"
          android:background="@color/background_opaque_50"
          android:textSize="@dimen/editor_desc_textsize"
          android:textColor="@color/colorAccent"
          android:visibility="gone"/>

    <androidx.constraintlayout.widget.Guideline
          android:id="@+id/cardGuide"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintGuide_percent="1"
          android:orientation="vertical"/>

    <Button
          android:id="@+id/btnCardEdit"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:gravity="center"
          app:layout_constraintStart_toEndOf="@id/cardGuide"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="@id/cardImage"
          app:layout_constraintBottom_toBottomOf="@id/cardImage"
          android:backgroundTint="@color/colorAccent"
          android:drawableStart="@drawable/ic_edit"
          android:text="@string/editor_detail_btn_edit"
          android:textColor="@color/colorPrimaryDark"
          android:visibility="gone"/>

    <TextView
          android:id="@+id/cardName"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:elevation="@dimen/elevation_def"
          app:layout_constraintStart_toStartOf="@id/cardImage"
          app:layout_constraintEnd_toEndOf="@id/cardImage"
          app:layout_constraintBottom_toBottomOf="@id/cardImage"
          android:background="@color/colorPrimary"/>

    <TextView
          android:id="@+id/cardCounter"
          android:layout_width="@dimen/card_counter_width"
          android:layout_height="@dimen/card_counter_width"
          android:gravity="center"
          android:elevation="@dimen/elevation_def"
          app:layout_constraintStart_toStartOf="@id/cardImage"
          app:layout_constraintTop_toTopOf="@id/cardImage"
          android:background="@drawable/button_round"/>

</androidx.constraintlayout.widget.ConstraintLayout>