<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      xmlns:app="http://schemas.android.com/apk/res-auto">

    <creations.rimov.com.chipit.ui.custom.VideoLayout
          android:id="@+id/cardText"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_gravity="center"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@id/btnCardEdit"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:adjustViewBounds="true"/>

    <include
          layout="@layout/recycler_web_card_title"
          app:layout_constraintStart_toStartOf="@id/cardText"
          app:layout_constraintEnd_toEndOf="@id/cardText"
          app:layout_constraintTop_toTopOf="@id/cardText"
          app:layout_constraintBottom_toBottomOf="@id/cardText"/>

</androidx.constraintlayout.widget.ConstraintLayout>