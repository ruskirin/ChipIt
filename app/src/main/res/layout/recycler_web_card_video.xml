<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <creations.rimov.com.chipit.viewgroups.CustomVideoLayout
          android:id="@+id/cardVideo"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_gravity="center"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@id/cardGuide"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:adjustViewBounds="true"/>

    <androidx.constraintlayout.widget.Guideline
          android:id="@+id/cardGuide"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintGuide_percent="1"
          android:orientation="vertical"/>

    <TextView
          android:id="@+id/cardDesc"
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintStart_toEndOf="@id/cardGuide"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
          android:id="@+id/cardName"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="@id/cardImage"
          android:background="@color/colorPrimary"/>

    <TextView
          android:id="@+id/cardCounter"
          android:layout_width="@dimen/card_counter_width"
          android:layout_height="@dimen/card_counter_width"
          android:gravity="center"
          app:layout_constraintEnd_toEndOf="@id/cardImage"
          app:layout_constraintTop_toTopOf="@id/cardImage"
          android:background="@drawable/button_round"/>

</androidx.constraintlayout.widget.ConstraintLayout>