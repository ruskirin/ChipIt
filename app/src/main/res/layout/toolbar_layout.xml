<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

        <FrameLayout
                android:id="@+id/toolbarExtLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_collapseMode="parallax">

            <ImageView
                    android:id="@+id/toolbarExtImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>

            <TextView
                    android:id="@+id/toolbarExtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/directory_recycler_topic_desc_default"
                    android:visibility="gone"/>

        </FrameLayout>

        <Toolbar
                android:id="@+id/appToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="end|center_horizontal"
                app:popupTheme="@style/Widget.AppCompat.ActionBar"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                app:layout_collapseMode="pin"
                app:title="@string/dir_fragment_name"/>

    </com.google.android.material.appbar.CollapsingToolbarLayout>

</merge>