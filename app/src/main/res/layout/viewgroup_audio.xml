<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      tools:parentTag="creations.rimov.com.chipit.viewgroups.custom.CustomAudioLayout"
      tools:layout_width="match_parent"
      tools:layout_height="match_parent">

    <!--TODO: use MediaPlayer for audio playback as it is less energy-consuming
          when compared to ExoPlayer-->

    <include
          android:id="@+id/promptPrevAudioControls"
          layout="@layout/viewgroup_play_controls"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toTopOf="@id/promptPrevAudioSeekbar"/>

    <SeekBar
          android:id="@+id/promptPrevAudioSeekbar"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/promptPrevAudioControls"
          app:layout_constraintBottom_toBottomOf="parent"/>

</merge>