<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      tools:parentTag="creations.rimov.com.chipit.viewgroups.custom.CustomVideoLayout"
      tools:layout_width="match_parent"
      tools:layout_height="wrap_content">

    <SurfaceView
          android:id="@+id/videoSurface"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>

    <creations.rimov.com.chipit.viewgroups.custom.CustomPlaybackControls
          android:id="@+id/playbackControls"
          android:layout_width="0dp"
          android:layout_height="@dimen/standard_touch_smallsize"
          android:elevation="@dimen/elevation_def"
          app:layout_constraintStart_toStartOf="@id/videoSurface"
          app:layout_constraintEnd_toEndOf="@id/videoSurface"
          app:layout_constraintBottom_toBottomOf="@id/videoSurface"
          android:background="@color/background_opaque_50"/>

</merge>