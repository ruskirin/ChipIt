<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.WebActivity">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/web_layout_recycler_u_chips"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/web_layout_u_chips_margintop"
                android:clipToPadding="false"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/web_layout_recycler_l_chips"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintTop_toBottomOf="@id/web_layout_recycler_u_chips"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:id="@+id/web_layout_addpanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/directory_layout_addpanel_marginbot"
            android:layout_marginEnd="@dimen/directory_layout_addpanel_marginend"
            android:orientation="horizontal"
            android:visibility="gone">

        <ImageButton
                android:id="@+id/web_layout_addpanel_camera"
                android:layout_width="@dimen/directory_layout_addpanel_button_side"
                android:layout_height="@dimen/directory_layout_addpanel_button_side"
                android:layout_marginStart="@dimen/directory_layout_addpanel_button_marginhoriz"
                android:layout_marginEnd="@dimen/directory_layout_addpanel_button_marginhoriz"
                android:layout_marginTop="@dimen/directory_layout_addpanel_button_marginvert"
                android:layout_marginBottom="@dimen/directory_layout_addpanel_button_marginvert"
                android:src="@mipmap/ic_add_camera"/>

        <ImageButton
                android:id="@+id/web_layout_addpanel_files"
                android:layout_width="@dimen/directory_layout_addpanel_button_side"
                android:layout_height="@dimen/directory_layout_addpanel_button_side"
                android:layout_marginStart="@dimen/directory_layout_addpanel_button_marginhoriz"
                android:layout_marginEnd="@dimen/directory_layout_addpanel_button_marginhoriz"
                android:layout_marginTop="@dimen/directory_layout_addpanel_button_marginvert"
                android:layout_marginBottom="@dimen/directory_layout_addpanel_button_marginvert"
                android:src="@mipmap/ic_add_files"/>

    </LinearLayout>

</FrameLayout>
