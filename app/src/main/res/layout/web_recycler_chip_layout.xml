<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/web_recycler_chip_image"
            android:layout_marginStart="@dimen/web_layout_l_chips_marginside"
            android:layout_marginEnd="@dimen/web_layout_l_chips_marginside"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <ImageButton
            android:id="@+id/web_recycler_chip_delete"
            android:layout_width="@dimen/web_recycler_button_delete_side"
            android:layout_height="@dimen/web_recycler_button_delete_side"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="@dimen/web_recycler_button_delete_margin"
            android:layout_marginBottom="@dimen/web_recycler_button_delete_margin"
            android:scaleType="fitXY"
            android:background="@drawable/button_round"
            android:src="@mipmap/ic_delete_web"
            android:visibility="gone"/>

</FrameLayout>